- show_teams = resource.is_a?(Event) || resource.is_a?(Campaign)
.tab-content
  .staff-table
    .row-fluid.scroll-table-header
      span.scroll-table-filter
        input type="text" name="q" id="staff-search-item" onkeyup="filterList(this)"
    .scroll-table-content
      .link-list
        ul#staff-list
          - @staff.each do |member|
            li id="staff-member-#{member.is_a?(CompanyUser) ? 'user-'+member.id.to_s : 'team-'+member.id.to_s}"
              span.member-data
                span.member-name= member.name
                span.member-description= member.is_a?(CompanyUser) ? member.role_name : member.description
              span.add-button.pull-right
                - if member.is_a?(CompanyUser)
                    = link_to '', url_for(action: :add_members, member_id: member.id), id: "add-member-btn-#{member.id}", data:{'user-id' => member.id}, class: 'icon-plus-sign', remote: true, method: :post
                - else
                    = link_to '', url_for(action: :add_members, team_id: member.id), id: "add-member-btn-#{member.id}", data:{'team-id' => member.id}, class: 'icon-plus-sign', remote: true, method: :post

javascript:
  function filterList(element) {
    var value = $(element).val();
    $("#staff-list > li").each(function() {
      if ($(this).text().toLowerCase().search(value) > -1) {
        $(this).show();
      }
      else {
        $(this).hide();
      }
    });
  }