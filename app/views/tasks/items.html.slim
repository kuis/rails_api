div data-content="items" data-total="#{collection_count}" data-pages="#{total_pages}" data-page="#{params[:page] || 1}"
  - show_user = params[:scope] == 'teams'
  = render collection: collection, partial: 'task', locals: {show_user: show_user}

- if params[:page].nil? || params[:page] == '1'
  div data-content="counters"
    = render 'counters'
