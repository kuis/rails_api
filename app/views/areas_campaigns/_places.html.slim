- resource.places.each do |place|
  .resource-item id="area-campaign-place-#{place.id}" class="#{resource.exclusions.include?(place.id) ? 'inactive' : ''}"
    .resource-item-link
      - if place.is_location?
        i.icon-wired-map.special-icon.pull-left
      - else
        i.icon-wired-venue.special-icon.pull-left
      .area_name= place.name
      .area_description= place.formatted_address
    .resource-item-actions
      = link_to '', exclude_place_campaign_areas_campaign_path(resource.campaign_id, resource.area_id, place_id: place.id), remote: true, method: :post, data: {disable_with: ''}, title: 'Deactivate', class: 'icon-rounded-disable deactivate-btn'
      = link_to '', include_place_campaign_areas_campaign_path(resource.campaign_id, resource.area_id, place_id: place.id), remote: true, method: :post, data: {disable_with: ''}, title: 'Activate', class: 'icon-rounded-ok activate-btn'