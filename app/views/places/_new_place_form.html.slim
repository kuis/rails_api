  $('#place_country').change () ->
    $.get '/countries/states.json', {country: $(this).val()}, (response) ->
      states = $('#place_state')
      val = states.val()
      states.html('<option></option>')
      if response.states
        for state in response.states
          option = $('<option>').val(state.name).html(state.name)
          if val is state.id
            option.attr('selected', 'selected')
          states.append(option)
      states.trigger('liszt:updated')

  if $(".hours-list .fields").length == 0
    $("#add-hours").trigger( "click" )
  $(".remove_nested_fields").first().hide()

  $(document).on 'nested:fieldAdded', (e) =>
    $('.hours-chosen:last .chosen-enabled').chosen()
