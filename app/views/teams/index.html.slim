#content-with-admin-nav
  #admin-sub-nav.pull-left
    = render 'admin_navigation'

  table#teams-list.table.table-striped.table-bordered.table-scrolled
    thead
      tr
        th Teams
        th Number of Members
        th Description
        th Status
        th
    tbody


  .row-fluid
    .pull-right
      = link_to 'New Team', new_team_path, {remote: true, class: 'btn btn-primary'}

javascript:
  var fixedTable = false;
  var teamsTable = $('#teams-list').dataTable({
        "sDom": "<'row-fluid'<'span6'l><'span6'f>r>t",
        //"sPaginationType": "bootstrap",
        "bPaginate": false,
        "bAutoWidth":false,
        "bProcessing": true,
        "bServerSide": false,
        "sAjaxSource": "#{teams_path(format: :table)}",
        "iDeferLoading": #{@teams.count},
        "fnServerData": function ( sSource, aoData, fnCallback ){
          $.getJSON(sSource, aoData, function (json){
            fnCallback(json);
            if (!fixedTable){
              fixedTable = new FixedHeader( teamsTable, {
                  "offsetTop": 90
              });
            }
          });
        },
        "aoColumns": [
          null,
          null,
          null,
          null,
          {"sWidth": '100px', 'bSortable': false}
        ]
  })

  new FixedHeader( teamsTable, {
    "offsetTop": 90
  });