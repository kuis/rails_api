li id="team_#{team.id}" class="#{active_class(team)}"
  = link_to_if_permitted :show, Team, team_path(team) do
    span
      b= team.name
      span.description
        = team.description
    span.members
      b= team.users.active.count
      br>/ 
      | Members
  span.pull-right
    = link_to '', edit_team_path(team), remote: true, class: 'edit' if can?(:edit, Team)
    - if can?(:deactivate, Team)
      = link_to_deactivate team
      = link_to '', activate_team_path(team), remote: true, class: 'enable',title: I18n.t('confirmation.active') unless team.active?