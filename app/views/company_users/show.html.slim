.row-fluid.with-details-close-bar
  = resource_details_bar("You are viewing user details. Click to close.", collection_path)

  .details_box.padding-top-close-bar
    h2= resource.full_name

    - if resource.role.present?
      .user-role
        = resource.role.name

    - if resource.email.present?
      .email-data
        = resource.email

    - if resource.phone_number.present?
      .phone-data
        = resource.phone_number

    - if resource.full_address.present?
      .place-data
        = resource.full_address

    .links-data
      = link_to '', edit_company_user_path(resource), remote: true, title: 'Edit', class: 'edit' if can?(:edit, resource)
      = active_inactive_buttons(resource) if can?(:deactivate, resource)

    // The is info will be displayed on the fixed bar when the window is scolled down to this position
    .details-bar-info
      h3= resource.full_name
      = link_to '', edit_company_user_path(resource), remote: true, class: 'edit' if can?(:edit, resource)
      = active_inactive_buttons(resource) if can?(:deactivate, resource)

  .details_box
    h3 PLACES
    #company_user-areas-list.row-fluid
      = render partial: 'company_users/area', collection: resource.areas.order('areas.name ASC')

    #company_user-places-list.row-fluid
      = render 'places'

    .row-fluid
      = link_to "", new_company_user_placeable_path(resource), remote: true, class: 'icon-plus-sign', title: 'Add Area' if can?(:edit, resource)

  .details_box
    h3 CAMPAIGNS

    = render 'campaigns'

  .details_box
    = link_to 'Add Goal', new_company_user_goal_path(resource), remote: true, class: 'btn btn-primary' if can?(:edit, resource)
    #resource-goals-list.link-list
      = render partial: 'goals/goal', collection: resource.goals.base, locals: {parent: resource}

javascript:
  $(document).on('company_users:change', function(){
    window.location.reload(false);
  })