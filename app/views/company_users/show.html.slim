      span.label NYC Team
      span.label Team Jameson
      span.label Team Chicago

    .aditional-info 
      - if resource.email.present?
        .email-data
          = resource.email

      - if resource.phone_number.present?
        .phone-data
          .number
            = resource.phone_number 
          .verify
            a class="special" href="#" Get Verified
          .info
            a.has-tooltip href="#" class="icon-info" title="This is a sample description of the verification function. Exact  copy for it is needed from Chris."

          .verified
            p Verified!

      - if resource.full_address.present?
        .place-data
          = resource.full_address

    .basic-info
      .profile-pic.big.no-pic.icon-user
      .edit-profile-pic
        ul
          li 
            a href="#" Upload photo
