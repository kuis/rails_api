- render 'settings'
- if resource.errors.any?
  | $('#kpi_errors').html('#{j resource.errors.full_messages.join("<br />").html_safe}').removeClass('hidden');
- else
  |
    $('.bootbox.modal').modal('hide');
    $(document).trigger('kpis:change');
    $('.form-builder-wrapper').formBuilder('addKpi', #{resource.form_field_options.merge({id: @field.id}).to_json.html_safe});