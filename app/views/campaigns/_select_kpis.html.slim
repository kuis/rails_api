.campaigns-modals
  p Add an existing KPI from the list below

  input#kpi-search-box.search-box type="text" name="q" placeholder="Search"
  .select-list-table-wrapper
    .link-list
      ul
        - if @kpis.present?
          - @kpis.each do |kpi|
            - type = kpi.is_a?(Kpi) ? 'kpi' : 'activity_type'
            li id="#{type}-#{kpi.id}"
              span
                .kpi_name= kpi.name
                .kpi_description= kpi.description
              span.pull-right
                = link_to '', send("add_#{type}_campaign_path", resource, "#{type}_id" => kpi.id), id: "add-#{type}-btn-#{kpi.id}", data:{'#{type}-id' => kpi.id}, remote: true, method: :post, enable_with: '...', class: 'icon-rounded-add', title: 'Add KPI'
        - else
          li.empty-list-message
            p There are not assignable KPIs
- if can?(:create_custom_kpis, resource)
  .row-fluid
    .span12
      .divider
        | OR

javascript:
  $('#kpi-search-box').on('keyup', function () {
    var value = $(this).val().toLowerCase();
    $(".select-list-table-wrapper .link-list ul > li:not(.empty-list-message)").each(function() {
      if ($(this).text().toLowerCase().search(value) > -1) {
        $(this).show();
      }
      else {
        $(this).hide();
      }
    });
  });