- if can?(:add_place, resource)
  = link_to "Add Places", new_campaign_placeable_path(resource), remote: true, id: 'add-place-btn', class: 'btn btn-primary', title: 'Add Place'
= render layout: 'goalable_list', locals: { goalables: resource.areas_and_places, kpis: resource.active_kpis, activity_types: resource.activity_types } do |goalable|
  - if can?(:remove_place, resource)
    - if goalable.is_a?(Area)
      = link_to '', edit_campaign_areas_campaign_path(resource, goalable), remote: true, class: 'icon-gear has-tooltip', title: 'Customize area', 'data-container' => 'body'
      = link_to '', remove_area_campaign_placeables_path(resource, area: goalable.id), method: :delete, remote: true, class: 'icon-remove-circle', title: 'Remove Area'
    - else
      = link_to '', campaign_place_path(resource, goalable), remote: true, method: :delete, remote: true, class: 'icon-remove-circle', title: 'Remove Place'
