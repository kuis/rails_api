.sidebar#resource-filter-column
  #collection-list-filters
  a.btn.btn-primary Save
.main
  = link_to 'Create a campaign', new_campaign_path, {remote: true, class: 'btn btn-primary'}
  .link-list
    ul#campaigns-list


javascript:
  $('#collection-list-filters').filteredList({
    'source': '#{items_path(controller: :campaigns)}',
    'filtersUrl': '#{filters_path(controller: :campaigns)}',
    'listContainer' : '#campaigns-list',
    'sorting': 'name',
    'sorting_dir': 'asc',
    'includeCalendars': false,
    'includeSearchBox': false,
    'includeAutoComplete': true,
    'autoCompletePath': '#{autocomplete_campaigns_path(format: :json)}',
    'defaultParams': [{name: 'status[]', value: 'Active'}]
  });