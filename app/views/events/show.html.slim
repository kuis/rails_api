.row-fluid
  h2 = resource.campaign_name

  p
    = event_date_range(resource)
    br

.row-fluid
  .span6
    .box
      .box-header
        h2 Event Map

      .box-content
        = "Map goes here"

  .span6
    .box
      .box-header
        h2 Event Team

      .box-content
        - resource.users.each do |team_member|
          = team_member.full_name
          br

= event_tasks_progress_bar(resource.tasks)

.row-fluid
  .box
    .box-header
      h2 Event Tasks

    .box-content
      = render partial: 'tasks/table', locals: {event: resource, tasks: resource.tasks}
      = link_to 'New Task', new_event_task_path(resource), {remote: true, class: 'btn btn-primary'}

.row-fluid
  .box
    .box-header
      h2 Event Documents

    .box-content