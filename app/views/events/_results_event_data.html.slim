.form-results-box
  #list-tools.row-fluid
    .pull-left
      h5.module-title
        = "POST EVENT RECAP"
        = link_to '', edit_data_event_path(resource), remote: true, id: 'edit-event-data-btn', class: 'icon-edit', title: 'Edit event data' if can?(:edit_data, resource)
    .pull-right
      .btn.download title="Download"
        = link_to '', form_event_path(format: :pdf), class: 'icon icon-download'

  = render partial: 'shared/form_field_results', locals: { form_fields: resource.campaign.form_fields }