- event_data = resource.event_data
- active_kpis = resource.campaign.active_kpis
- campaign_fields = resource.campaign.form_fields
- partial_field_types = ['FormField::Summation', 'FormField::LikertScale', 'FormField::Percentage', 'FormField::Section', 'FormField::Attachment', 'FormField::Photo']

.row-fluid
  h3
    == "POST EVENT FORM "
    = link_to '', edit_data_event_path(resource), remote: true, id: 'edit-event-data-btn', class: 'edit', title: 'Edit event data' if can?(:edit_data, resource)

  - if campaign_fields.any?
    .form-results-box
      - if resource.summary
        .form-result class="result_text_area"
          span.form-result-label Summary
          span.form-result-value= simple_format(resource.summary)

      - campaign_fields.each do |form_field|
        - result = resource.results_for([form_field]).first
        - field_class = form_field.type_name.partition('::').last.underscore
        div.form-result class="result_#{field_class}"
          - if partial_field_types.include?(form_field.type)
            = render partial: 'form_fields/'+field_class, locals: {form_field: form_field, result: result}
          - else
            - custom_kpi_value = result.try(:to_html)
            span.form-result-label = form_field.name
            span.form-result-value = custom_kpi_value


- if event_data
  #demographics.row-fluid
    .span6
      - if active_kpis.include?(Kpi.gender) && resource.demographics_graph_data[:gender].present?
        #gender-graph.row-fluid
          = gender_graph(resource.demographics_graph_data[:gender])

      - if active_kpis.include?(Kpi.age)
        .row-fluid
          #age-graph

    .span6
      - if active_kpis.include?(Kpi.ethnicity)
        #ethnicity-graph


- if event_data
  - if active_kpis.include?(Kpi.age)
    javascript:
      $('#age-graph').highcharts({
          chart: { type: 'bar' },
          title: { text: null },
          colors: ['#DFDFDF','#3E9CCF'],
          xAxis: {
              categories: #{resource.demographics_graph_data[:age].keys.to_json.html_safe},
              title: {
                  enabled: false
              },
              labels: {
                style: {color: '#3E9CCF; font-family:\'Lato\', sans-serif;'}
              },
              tickLength: 0,
              lineWidth: 0
          },
          tooltip: {enabled: false},
          yAxis: {
              max: 100,
              labels: { enabled: false },
              title: {text: false},
              gridLineColor: 'transparent',
              enabled: false
          },
          plotOptions: {
              bar: {
                  dataLabels: {
                      enabled: false
                  }
              },
              series: {
                  stacking: 'percent',
                  enableMouseTracking: false,
                  pointPadding: 0,
                  groupPadding: 0,
                  borderWidth: 0,
                  pointPadding: 0,
                  pointWidth: 15,
                  dataLabels: {
                      color: '#3E9CCF'
                  }
              }
          },
          legend: { enabled: false },
          credits: { enabled: false },
          series: [{
              name: 'Fill in',
              data: #{resource.demographics_graph_data[:age].values.map{|v|(100-v).round}.to_json.html_safe},

          },{
              name: 'Values',
              data: #{resource.demographics_graph_data[:age].values.map(&:round).to_json.html_safe},
              dataLabels: {
                      enabled: true,
                      format: '{y}%',
                      color: '#3E9CCF',
                      align: 'right',
                      x: 30,
                      y: -2,
                      style: { color: '#3E9CCF' }
                  }

          }]
      });

  - if active_kpis.include?(Kpi.ethnicity) && resource.demographics_graph_data[:ethnicity].values.max > 0
    javascript:
      $('#ethnicity-graph').highcharts({
            colors: ['#B1D7EC', '#8CC5E3', '#65B0D8', '#3D9DD0'],
            chart: {
                type: 'pie'
            },
            title: { text: null },
            credits: { enabled: false },
            yAxis: {
                title: { text: null }
            },
            plotOptions: {
                pie: {
                    shadow: false
                },
                series: {
                  enableMouseTracking: false,
                  dataLabels: {
                    connectorColor: '#C0C0C0',
                    softConnector: false
                  }
                }
            },
            tooltip: {
                enabled: false
            },
            series: [{
                name: 'Ethnicity',
                data: #{resource.demographics_graph_data[:ethnicity].map{|k,v|[k, v.round]}.to_json.html_safe},
                size: '60%',
                innerSize: '30%',
                distance: -10,
                dataLabels: {
                    crop: false,
                    formatter: function() {
                        // display only if larger than 1
                        return '<span style="font-size:15px; font-family:\'Lato\', sans-serif;">'+ this.y +'%</span><br /><div style="width: 50px;  font-family:\'Lato\', sans-serif;">'+ this.point.name+'</div>';
                    },
                    color: '#3E9CCF'
                }
            }]
      });

  javascript:
    $(document).on('areas:change', function(){
      $.get('#{areas_venue_path(resource, format: :js)}');
    });
