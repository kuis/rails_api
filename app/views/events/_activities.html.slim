#activities-container
  h3 ACTIVITIES
  - if can?(:create, Activity)
    = link_to 'Create', new_event_activity_path(resource), remote: true, class: 'btn btn-primary', title: 'New Activity'

  .link-list
    ul#activities-list
      = render partial: 'activities/activity', collection: resource.activities.active, locals: {parent: resource}