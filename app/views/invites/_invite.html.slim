    .span3
      .text-large= invite.event_date
      .crop-text= invite.place_name

    .span2
      .text-large= invite.venue.jameson_locals? ? 'Yes' : 'No'
      | Jameson Locals
    .span2
      .text-large= invite.venue.top_venue? ? 'Yes' : 'No'
      | Top 100
    .span1
      .text-large= invite.invitees
      | Invites
    .span1
      .text-large 11
      | RSVPs
    .span1
      .text-large 12 
      | Attendees
    .span2
      .text-large 12 
      | Accounts Attended

  div.resource-item-actions
