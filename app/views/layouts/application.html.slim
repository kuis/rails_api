head
  meta name="viewport" content="width=device-width, initial-scale=1.0"
  meta charset="utf-8"
  title= content_for?(:title) ? yield(:title) : "Brandscopic"
  meta content=(content_for?(:description) ? yield(:description) :"Brandscopic") name="description"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:100,300,400,700"
    = stylesheet_link_tag "plugins", :media => "all"
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "https://d218iqt4mo6adh.cloudfront.net/assets/widget_embed_191.css"
    = javascript_include_tag "application"
    = javascript_tag '$.fx.off = true;' if Rails.env.test?
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?key=#{GOOGLE_API_KEY}&libraries=places&sensor=false"
    = csrf_meta_tags
    = yield(:head)
    javascript:
      if (#{!Rails.env.test?}){
        $(document).ready(function(){
          checkUserTimeZoneChanges('#{escape_javascript(current_user.time_zone.try(:html_safe))}', '#{escape_javascript(current_user.detected_time_zone.try(:html_safe))}');
        })
      }
    = render 'layouts/icons'
    = render 'application/tracking/lucky_orange' unless Rails.env.development? || Rails.env.test?

  - unless Rails.env.development? || Rails.env.test?
    javascript:
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
