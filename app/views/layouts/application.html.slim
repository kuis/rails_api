doctype html
/[if lt IE 7]
  | <html class="ie6">
/[if IE 7]
  | <html class="ie7">
/[if IE 8]
  | <html class="ie8">
/[if IE 9]
  | <html class="ie9">
| <!--[if (gte IE 9)|!(IE)]<!--> <html> <!--<![endif]-->
head
  meta name="viewport" content="width=device-width, initial-scale=1.0"
  title= content_for?(:title) ? yield(:title) : "Brandscopic"
  meta content=(content_for?(:description) ? yield(:description) :"Brandscopic") name="description"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"
    = csrf_meta_tags
    = yield(:head)

body class="#{controller_name} #{action_name}"
  header
    .row-fluid
      .span10
        - if current_company
          h1= current_company.name
        - else
          h1 Brandscopic
      .span2
        - if user_signed_in?
          = current_user.full_name
          br
          = link_to 'Logout', destroy_user_session_path, method: :delete


  - sub_nav = render_navigation(renderer: :bootstrap, level: 2, skip_if_empty: true, nav_class: 'nav-list')
  - content_span_size = sub_nav.nil? ? 12 : 10

  .container-fluid
    .row-fluid
      div.span12
        .box-content
          = render_navigation renderer: :bootstrap, nav_class: 'nav-tabs'
          .tab-content
            .tab-pane.active
              .row-fluid
                .span12
                  - if sub_nav
                    .nav-collapse.sidebar-nav
                      .span2.main-menu-span= sub_nav

                  div class="span#{content_span_size}"
                      = render 'layouts/messages'

                      = yield
| </html>