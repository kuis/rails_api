      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-49170307-1', 'auto');
      ga('send', 'pageview');


body class="app-layout #{controller_name} #{action_name} #{custom_body_class} #{user_signed_in? ? 'with-fixed-top' : ''}"

  header class="navbar navbar-inverse navbar-fixed-top"
    .navbar-inner
      .container
        .pull-left
          h1#company-name= user_company_dropdown(current_user)
        .pull-right
          #mobile-main-nav-bar-btn.btn.btn-navbar data-toggle="collapse" data-target=".main-nav-collapse"
            span class="icon-bar"
            span class="icon-bar"
            span class="icon-bar"
        #top-admin-home-navigation.pull-right
          = render_navigation context: :top, expand_all: true, nav_class: 'nav-pills'

      .nav-collapse.collapse.main-nav-collapse
        = render_navigation renderer: :bootstrap, nav_class: 'nav-pills'

  .nav-collapse.collapse
    .menu
      = render_navigation renderer: :bootstrap, nav_class: 'nav-stacked'
  = yield :alerts
  = render 'layouts/messages'
  #main-container.container
    #application-content class="#{content_for?(:details_bar) ? 'with_details_bar' : ''}"
      .row-fluid
        .span12
          = yield

  span class="totop pull-right"
    a href="#" Top
  footer
    = render 'shared/satisfaction_survey'
    a target="_blank" class="pull-right" href="http://www.brandscopic.com" Powered by Brandscopic
  = render 'application/help'

  = yield(:footer)

</html>