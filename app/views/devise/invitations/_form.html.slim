- remote ||= false
= simple_form_for(resource, remote: remote || false, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post}) do |f|
  = f.error_notification

  .form-inputs
    h3 Invite user
    .row-fluid.users
      .span6
        = f.input :first_name, input_html: {class: 'input-large'}, :autofocus => true
      .span6
        = f.input :last_name, input_html: {class: 'input-large'}
    .row-fluid.users-teams-roles
      = f.simple_fields_for :company_users do |cf|
        = cf.input :teams, collection: Team.active.all, input_html: {class: 'chosen-enabled'}
        br>/
        = cf.input :role_id, as: :select, collection: current_company.roles.active, input_html: {class: 'chosen-enabled'}
    .row-fluid
      = f.input :email, input_html: {class: 'input-xxlarge'}

  .form-actions
    = f.button :submit, class: 'btn btn-primary', disable_with: 'Please wait...'
    = "&nbsp;".html_safe
    = f.button :button, 'Cancel', class: 'btn btn-cancel'

javascript:
  $('#user_team_ids').select2();