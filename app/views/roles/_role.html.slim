li id="role_#{role.id}" class="#{active_class(role)}"
  = link_to_if_permitted :show, Role, role_path(role) do
    span
      b= role.name
      span.description
        = role.description
  span.pull-right
    = link_to '', edit_role_path(role), remote: true, class: 'icon-edit' if can?(:edit, Role)
    - if can?(:deactivate, Role)
      = link_to_deactivate role
      = link_to '', activate_role_path(role), remote: true, class: 'icon-rounded-ok',title: I18n.t('confirmation.activate') unless role.active?