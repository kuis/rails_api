.row-fluid
  #resource-index-container.no-calendars.span12
    .pull-right
      #resource-filter-column
        .text-right
          = link_to 'New Day Part', new_resource_path, {remote: true, class: 'btn btn-primary'}
        #collection-list-filters

    table#day-parts-list.table.table-striped.table-bordered.table-scrolled
      thead
        tr
          th data-sort="name" Name
          th data-sort="description" Description
          th data-sort="active" Status
          th
      tbody


javascript:
  $('#collection-list-filters').filterBox({
    'includeSearchBox': false,
    'includeAutoComplete': true,
    'autoCompletePath': '#{autocomplete_day_parts_path(format: :json)}',
    'onChange': function(filterBox){
      if (typeof dayPartsTable != 'undefined')
        dayPartsTable.tableScroller('reloadData');
    }
  });

  var dayPartsTable = $('table#day-parts-list').tableScroller({
    'source': '#{collection_path(format: :json)}',
    'fixedHeader': true,
    'filterBox': '#collection-list-filters',
    'rowValues': function(row){
      return [row.name, row.description, row.status]
    },
    'onItemsChange': function(items) {
      $(document).trigger('day-parts-list:changed', [items]);
    },
    'rowId': function(row){
      return 'day_part_'+row.id;
    },
    'headerOffset': 91
  })