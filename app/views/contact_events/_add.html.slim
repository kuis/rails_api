.contacts-modals
  p Add an existing contact from the list below

  input type="text" name="q" id="contact-search-box"
  #select-contacts-table-wrapper
    .scroll-table-content
      .link-list
        ul#contacts-list
          li.placeholder
            span Use the box above to look for contacts

    .row-fluid
      .span12
        .divider
          | OR

    p
      = link_to 'Create New Contact', new_event_contact_event_path(parent), remote: true, class: 'btn btn-primary'
      = link_to 'Close', '', class: 'btn btn-cancel'

javascript:
  var contactRequest = false;
  $('#contact-search-box').on('keyup', function () {
    if (contactRequest) {
      contactRequest.abort();
    }
    var value = $(this).val();
    contactRequest = $.ajax({
        url: '#{list_event_contact_events_path}?term='+escape(value),
        success: function(data){
          $('ul#contacts-list').html(data);
        }
    });
  });