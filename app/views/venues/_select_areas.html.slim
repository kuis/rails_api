#select-areas-table-wrapper
    h3 Add to Area
    .link-list
      ul#areas-list
        - Area.not_in_venue(resource.place_id).each do |area|
          li id="area-#{area.id}"
            span.pull-left
              .area_name= area.name
              | Here goes the description for this
            span.pull-right
              = link_to '', add_area_venue_path(resource, area_id: area.id), remote: true, method: :post, enable_with: '...', class: 'add' if area.active?
              = link_to '', add_area_venue_path(resource, area_id: area.id), remote: true, method: :post, disable_with: '...', class: 'active' unless area.active?

javascript:
  selectAreasTable = $('#select-areas-list').dataTable({
        "sDom": "<'row-fluid'<'span6'l><'span6'f>r><'scroll-table-wrapper't>",
        "bPaginate": false,
        "bProcessing": true,
        "bAutoWidth": false,
        "bDestroy": true,
        "aoColumns": [
          null,
          {"sWidth": '30px', 'bSortable': false}
        ]
  });