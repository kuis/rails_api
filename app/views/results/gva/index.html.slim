.tab-content
  #list-view.tab-pane.active
    .details_box
      = simple_form_for :report, url: results_gva_path, remote: true do |f|
        = f.input_field :campaign_id, collection: @campaigns, selected: params[:campaign_id], wrapper: false, class: 'chosen-enabled no-validate'

  #report-container

javascript:
  jQuery(function(){
    $('#report_campaign_id').on('change', function(e){
      if ( $(this).val() ){
        $(this.form).submit();
      }
    });
    $(window).ready(function(){
      $('#report_campaign_id').change()
    })
  })
