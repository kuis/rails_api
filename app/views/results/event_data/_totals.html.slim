.events-box
  .big-number
    = number_with_delimiter(data_totals['events_count'])
  = 'EVENTS'
.results-box-container
  span.event-data-column.promo-hours-box
    .big-number
      = number_with_precision(data_totals['promo_hours'], precision: 2)
    = 'PROMO HOURS'
  span.event-data-column.impressions-box
    .big-number
      = number_with_delimiter(data_totals['impressions'])
    = 'IMPRESSIONS'
  span.event-data-column.interactions-box
    .big-number
      = number_with_delimiter(data_totals['interactions'])
    = 'INTERACTIONS'
  span.event-data-column.samples-box
    .big-number
      = number_with_delimiter(data_totals['samples'])
    = 'SAMPLED'
  span.event-data-column.cost-box
    .big-number
      = number_to_currency(data_totals['cost'])
    = 'SPENT'
  span.event-data-column.gender-female-box
    .big-number
      = number_to_percentage(data_totals['gender_female'], precision: 2)
    | FEMALE
  span.event-data-column.gender-female-box
    .big-number
      = number_to_percentage(data_totals['gender_male'], precision: 2)
    | MALE
  span.event-data-column.ethnicity-asian-box
    .big-number
      = number_to_percentage(data_totals['ethnicity_asian'], precision: 2)
    | ASIAN
  span.event-data-column.ethnicity-black-box
    .big-number
      = number_to_percentage(data_totals['ethnicity_black'], precision: 2)
    .data-label
      | AFRICAN
      br>/
      | AMERICAN
  span.event-data-column.ethnicity-hispanic-box
    .big-number
      = number_to_percentage(data_totals['ethnicity_hispanic'], precision: 2)
    .data-label
      | HISPANIC
      br>/
      | LATINO
  span.event-data-column.ethnicity-native-american-box
    .big-number
      = number_to_percentage(data_totals['ethnicity_native_american'], precision: 2)
    .data-label
      | NATIVE
      br>/
      | AMERICAN
  span.event-data-column.ethnicity-white-box
    .big-number
      = number_to_percentage(data_totals['ethnicity_white'], precision: 2)
    | WHITE
