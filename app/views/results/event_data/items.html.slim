div data-content="items" data-existing-total="#{collection_total_count}" data-total="#{collection_count}" data-pages="#{total_pages}" data-page="#{params[:page] || 1}"

  = render collection: collection, partial: 'event_data', as: :event

- if params[:page].nil? || params[:page] == '1'
  div data-content="totals-results"
    = render 'totals'

  div data-content="filters-description"
    = describe_filters('result')