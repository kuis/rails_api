        Row
          Cell
            Data ss:Type="String"= neighborhood.name
          Cell
            Data ss:Type="String"= neighborhood.city
          Cell
            Data ss:Type="String"= neighborhood.state
          Cell
            Data ss:Type="String"= neighborhood.attendees
          Cell
            Data ss:Type="String"= neighborhood.attended
          Cell
            Data ss:Type="String"= neighborhood.invitations
