          Data ss:Type="String" NEIGHBORHOOD
        Cell
          Data ss:Type="String" CITY
        Cell
          Data ss:Type="String" STATE
        Cell
          Data ss:Type="String" ATTENDEES
        Cell
          Data ss:Type="String" ACCOUNTS ATTENDED
        Cell
          Data ss:Type="String" INVITATIONS
