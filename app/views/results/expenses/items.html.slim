div data-content="items" data-total="#{collection_count}" data-pages="#{total_pages}" data-page="#{params[:page] || 1}"

  = render partial: 'expense', collection: collection, as: :event

- if params[:page].nil? || params[:page] == '1'
  div data-content="totals-results"
    = render 'totals'

  div data-content="filters-description"
    = describe_filters('expense')